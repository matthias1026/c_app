<% provide(:title, 'Edit Event') %>
<h1>Update Event</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@event) do |f| %>
    <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :date %>
      <%= f.date_field :event_date %>

      <%= f.label :time %>
      <%= f.text_field :time %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.submit "Save Changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>